<p class="text-6xl text-center" xmlns="http://www.w3.org/1999/html">ATM</p>
    <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" asp-controller="ATM" asp-action="loginPost" method="post">
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
               Account Number 
            </label>
            <input name="NCuenta" class="shadow appearance-none border @if(@ViewBag.ErrorLogin != null){@Html.Raw("border-red-500")} rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="Account NUmber">
        </div>
        <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
               Pin 
            </label>
            <input name="Pin" class="shadow appearance-none border @if(@ViewBag.ErrorLogin != null){@Html.Raw("border-red-500")} rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" placeholder="******************">
            @if (@ViewBag.ErrorLogin!= null)
            {
            <p class="text-red-500 text-xs italic">Please insert Valid Pin.</p>
            }
        </div>
        <div class="flex items-center justify-between">
            <input class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                Sign In
            </input>
            
        </div>
    </form>
    <p class="text-center text-gray-500 text-xs">
        &copy;BAN-fa-K-e
    </p>